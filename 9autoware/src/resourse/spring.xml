<?xml version="1.0" encoding="UTF-8"?>

<beans  
    xmlns="http://www.springframework.org/schema/beans"  
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"  
    xmlns:p="http://www.springframework.org/schema/p"  
    xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
               
               <bean id="eeeengine" class="com.java.engine">
               
               <property name="modelyear" value="2018"></property>
               
               </bean>
               
               <bean id="c" class="com.java.car" autowire="byType">
               
               <property name="carname" value="benz"></property>
               
               <property name="engine" ref="eeeengine"></property>
               </bean>
               
               </beans>